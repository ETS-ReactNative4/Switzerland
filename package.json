{
  "name": "switzerland",
  "version": "0.1.9",
  "description": "Switzerland.js is a playground for experimenting with various Web Component techniques, approaches, and implementations.",
  "main": "dist/switzerland.js",
  "scripts": {
    "build": "webpack --config webpack.cjs.js && webpack --config webpack.web.js && npm run dev",
    "dev": "webpack --config webpack.example.js",
    "test": "npm run lint && npm run spec",
    "spec": "NODE_ENV=development ava",
    "lint": "xo src/*.js src/**/*.js",
    "cleanup": "rimraf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wildhoney/Switzerland.git"
  },
  "author": "Adam Timberlake <adam.timberlake@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Wildhoney/Switzerland/issues"
  },
  "homepage": "https://github.com/Wildhoney/Switzerland#readme",
  "dependencies": {
    "axios": "^0.14.0",
    "ramda": "^0.22.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "axios-mock-adapter": "^1.6.1",
    "babel-cli": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-es2015-arrow-functions": "^6.8.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.15.0",
    "babel-plugin-transform-es2015-computed-properties": "^6.8.0",
    "babel-plugin-transform-es2015-destructuring": "^6.9.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.14.0",
    "babel-plugin-transform-es2015-parameters": "^6.11.4",
    "babel-plugin-transform-es2015-spread": "^6.8.0",
    "babel-plugin-transform-es2015-template-literals": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-register": "^6.14.0",
    "cors": "^2.8.1",
    "css-url-parser": "^1.1.0",
    "envify": "^3.4.1",
    "envify-loader": "^0.1.0",
    "escape-string-regexp": "^1.0.5",
    "esprima-fb": "^15001.1001.0-dev-harmony-fb",
    "express": "^4.14.0",
    "humps": "^1.1.0",
    "jsdom": "^9.5.0",
    "moment": "^2.15.1",
    "path-parse": "^1.0.5",
    "promised-pipe": "^1.0.1",
    "prop-types": "^0.2.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "rimraf": "^2.5.4",
    "shortid": "^2.2.6",
    "sinon": "^1.17.6",
    "virtual-dom": "^2.1.1",
    "virtual-dom-loader": "^0.1.0",
    "webpack": "^1.13.2",
    "xo": "^0.16.0"
  },
  "ava": {
    "files": [
      "tests/*.test.js",
      "tests/**/*.test.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register",
      "./tests/helpers/setup-browser-env.js"
    ]
  },
  "xo": {
    "space": 4,
    "esnext": true,
    "globals": [
      "window",
      "document",
      "self"
    ],
    "rules": {
      "padded-blocks": "off",
      "max-lines": [
        2,
        500
      ],
      "babel/object-curly-spacing": [
        2,
        "always"
      ],
      "babel/array-bracket-spacing": "off",
      "no-unused-vars": [
        1
      ],
      "max-nested-callbacks": [
        1,
        5
      ],
      "default-case": "off",
      "no-unused-expressions": "off",
      "no-case-declarations": "off",
      "import/no-named-as-default": "off",
      "no-duplicate-imports": "off"
    }
  }
}