{
  "name": "switzerland",
  "version": "1.0.0",
  "description": "Switzerland takes a functional approach to Web Components by applying middleware to your components. Supports Redux, mobx, attribute mutations, CSS variables, React-esque setState/state, etcâ€¦ out-of-the-box, along with Shadow DOM for style encapsulation and Custom Elements for interoperability.",
  "main": "src/switzerland.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "flow": "flow check --all",
    "spec": "ava",
    "build": "webpack",
    "lint": "xo src/*.js",
    "test": "npm run flow && npm run lint && npm run spec",
    "start": "concurrently 'http-server' 'webpack --watch'",
    "webpack-defaults": "webpack-defaults"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wildhoney/Switzerland.git"
  },
  "keywords": [
    "web components",
    "webcomponents",
    "components",
    "shadow dom",
    "custom elements"
  ],
  "author": "Adam Timberlake <adam.timberlake@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Wildhoney/Switzerland/issues"
  },
  "homepage": "https://github.com/Wildhoney/Switzerland#readme",
  "dependencies": {
    "picodom": "~0.1.0"
  },
  "devDependencies": {
    "ava": "~0.19.1",
    "babel-core": "~6.25.0",
    "babel-eslint": "~7.2.3",
    "babel-loader": "~7.0.0",
    "babel-plugin-transform-async-to-generator": "~6.24.1",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-do-expressions": "~6.22.0",
    "babel-plugin-transform-es2015-arrow-functions": "~6.22.0",
    "babel-plugin-transform-es2015-destructuring": "~6.23.0",
    "babel-plugin-transform-es2015-modules-commonjs": "~6.24.1",
    "babel-plugin-transform-es2015-parameters": "~6.24.1",
    "babel-plugin-transform-es2015-spread": "~6.22.0",
    "babel-plugin-transform-es2015-template-literals": "~6.22.0",
    "babel-plugin-transform-flow-strip-types": "~6.22.0",
    "babel-plugin-transform-object-rest-spread": "~6.23.0",
    "babel-plugin-transform-react-jsx": "~6.24.1",
    "concurrently": "~3.5.0",
    "eslint": "~3.19.0",
    "eslint-config-xo-react": "~0.12.0",
    "eslint-plugin-flowtype": "~2.35.0",
    "eslint-plugin-react": "~7.1.0",
    "flow": "~0.2.3",
    "http-server": "~0.10.0",
    "puppeteer": "~0.9.0",
    "uglifyjs-webpack-plugin": "~1.0.0-beta.1",
    "webpack": "~3.0.0",
    "xo": "~0.18.2"
  },
  "ava": {
    "files": [
      "tests/*.test.js",
      "tests/**/*.test.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "xo": {
    "space": 4,
    "esnext": true,
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "window",
      "ShadowRoot",
      "HTMLElement"
    ],
    "extends": "xo-react",
    "rules": {
      "curly": [
        "error",
        "multi-line"
      ],
      "padded-blocks": "off",
      "object-curly-spacing": [
        2,
        "always"
      ],
      "max-params": [
        1,
        5
      ],
      "flowtype/define-flow-type": "off",
      "unicorn/filename-case": "off",
      "default-case": "off",
      "brace-style": "off",
      "no-unused-expressions": "off",
      "import/prefer-default-export": "off",
      "react/jsx-space-before-closing": "off",
      "react/jsx-tag-spacing": "off",
      "react/jsx-no-bind": "off",
      "react/forbid-component-props": "off",
      "import/extensions": [
        1,
        {
          "js": "never",
          "json": "always"
        }
      ]
    }
  },
  "pre-push": []
}
