{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs",
            "plugins": [{ "transform": "@magic-works/commonjs-import.meta" }],
            "esModuleInterop": true
        },
        "compiler": "ttypescript",
        "ignoreDiagnostics": [1343]
    }
}
